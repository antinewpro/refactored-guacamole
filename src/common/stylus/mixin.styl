border-1px($color) // $color 参数
    position: relative;

    &:after // 伪类
        display: block;
        position: absolute;
        left: 0;
        bottom: 0;
        width: 100%;
        border-top: 1px solid $color;
        content: ' ';

border-none()
    &:after
        display: none


bg-img($name) 
    background-image: url("./imgs/" + $name + '@2x.png')
    @media (-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3)
        background-image: url("./imgs/" + $name + "@3x.png")

bg-img_x($name, $x) 
    background-image: url("./imgs/" + $name + "_" + $x + '@2x.png')
    @media (-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3)
        background-image: url("./imgs/" + $name + "_" + $x + "@3x.png")
